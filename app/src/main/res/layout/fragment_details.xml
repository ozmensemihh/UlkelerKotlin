<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailsFragment"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imd_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        tools:srcCompat="@tools:sample/avatars"
        android:padding="10dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="3dp">

        <TextView
            android:id="@+id/txt_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deneme"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/txt_detail_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deneme"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/txt_detail_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deneme"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/txt_detail_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deneme"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/txt_detail_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deneme"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="5dp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat></layout>